# ============================================================================
# FingerBlaster Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!
# ============================================================================

# =============================================================================
# REQUIRED - Polymarket Authentication
# =============================================================================

# Your Ethereum private key (used for signing orders)
# Generate from a wallet like MetaMask, or use a dedicated trading key
PRIVATE_KEY=0x...

# Polymarket API credentials (get from https://polymarket.com/settings/api)
POLY_API_KEY=your_api_key_here
POLY_API_SECRET=your_api_secret_here
POLY_API_PASSPHRASE=your_passphrase_here

# =============================================================================
# OPTIONAL - Web UI Configuration
# =============================================================================

# FastAPI backend settings
WEB_API_HOST=0.0.0.0
WEB_API_PORT=8000

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API key for production security (empty = no auth required, good for local dev)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
FB_API_KEY=

# =============================================================================
# OPTIONAL - Frontend Configuration (prefix with VITE_ for Vite to expose)
# =============================================================================

# Backend API URL (for frontend to connect to)
VITE_API_URL=http://localhost:8000

# WebSocket URL (for real-time updates)
VITE_WS_URL=ws://localhost:8000/ws

# API Key for authenticated requests (must match FB_API_KEY if set)
VITE_API_KEY=

# =============================================================================
# OPTIONAL - Coinbase API (for Pulse module)
# =============================================================================

# Coinbase Advanced Trade API credentials (required for Pulse module)
# Get from: https://www.coinbase.com/advanced-trade/api
# 
# IMPORTANT: Coinbase has TWO types of API keys:
#
# 1. CDP API Keys (NEW - JWT-based) - RECOMMENDED:
#    - API Key format: organizations/{org_id}/apiKeys/{key_id}
#    - Private Key: EC private key in PEM format (-----BEGIN EC PRIVATE KEY-----)
#    - NO PASSPHRASE REQUIRED (passphrase is not used for CDP keys)
#    - Requires: pip install PyJWT==2.8.0 cryptography==42.0.5
#
# 2. Legacy API Keys (OLD - HMAC-based):
#    - API Key: Simple string
#    - API Secret: Base64-encoded or raw string
#    - Passphrase: Required (set during key creation)
#
# The code will auto-detect which type you're using.
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
# Only needed for legacy API keys (NOT required for CDP keys)
# Leave empty or omit for CDP keys
COINBASE_API_PASSPHRASE=

# =============================================================================
# OPTIONAL - AI/Analytics Features
# =============================================================================

# Gemini API key for AI-powered analysis (optional)
GEMINI_API_KEY=

# =============================================================================
# OPTIONAL - Trading Configuration
# =============================================================================

# Default order size in USDC
DEFAULT_ORDER_SIZE=1

# Size step for increment/decrement
SIZE_STEP=1

# Minimum order size
MIN_ORDER_SIZE=1

# Maximum order size
MAX_ORDER_SIZE=100

